;;关闭备份文件 自动保存
(setq make-backup-files nil)
(setq auto-save-default nil)

;;开启最近打开的文件
(recentf-mode t)
(setq recentf-max-menu-items 25)

;;开启括号高亮
(add-hook 'emacs-lisp-mode-hook 'show-paren-mode)

;;删除选中部分
(delete-selection-mode t)


